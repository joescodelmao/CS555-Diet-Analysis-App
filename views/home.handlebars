<header>
  <h1>Diet Analysis App</h1>
</header>

<main>
  {{#if user}}
    <h2>Welcome {{user.firstName}}!</h2>

    <section id="logged-meals">
      <h3>Previously Logged Meals</h3>

      {{#if hasMeals}}
        <div class="meal-list">
          {{#each logs}}
            <div class="meal-card">
              <img src="{{this.image}}" alt="{{this.foodName}}" onerror="this.src='/images/placeholder.png'">
              <div class="meal-info">
                <h4>{{this.foodName}}</h4>
                <p><strong>Type:</strong> {{this.mealType}}</p>
                <p><strong>Date:</strong> {{this.date}}</p>
                <p><strong>Quantity:</strong> {{this.quantity}} {{this.servingUnit}}</p>
              </div>
            </div>
          {{/each}}
        </div>
      {{else}}
        <p>No meals have been logged yet.</p>
      {{/if}}
    </section>

  {{else}}
    <a href="/register">Register</a>
    <a href="/login">Login</a>
  {{/if}}
</main>
