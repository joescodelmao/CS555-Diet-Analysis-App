<div class="nutritional-dashboard">
  <h1>Nutritional Dashboard</h1>

  <div class="dashboard-controls">
    <input type="date" id="datePicker" value="{{today}}">
    <button id="refreshBtn">Refresh</button>
    <a href="/goals-setup" class="btn btn-primary">Set Goals</a>
  </div>

  <div id="noGoalsMessage" class="alert alert-info" style="display: none;">
    <p>You haven't set up your nutritional goals yet. <a href="/goals-setup">Set them up now</a>.</p>
  </div>

  <div id="dashboardContent" style="display: none;">
    <!-- Daily Summary -->
    <div class="daily-summary">
      <h2>Daily Summary</h2>
      <div class="summary-grid">
        <div class="summary-card">
          <h3>Calories</h3>
          <div class="progress-bar">
            <div class="progress-fill" id="caloriesProgress"></div>
          </div>
          <p><span id="caloriesConsumed">0</span> / <span id="caloriesGoal">0</span> kcal</p>
        </div>
        <div class="summary-card">
          <h3>Protein</h3>
          <div class="progress-bar">
            <div class="progress-fill" id="proteinProgress"></div>
          </div>
          <p><span id="proteinConsumed">0</span> / <span id="proteinGoal">0</span> g</p>
        </div>
        <div class="summary-card">
          <h3>Carbs</h3>
          <div class="progress-bar">
            <div class="progress-fill" id="carbsProgress"></div>
          </div>
          <p><span id="carbsConsumed">0</span> / <span id="carbsGoal">0</span> g</p>
        </div>
        <div class="summary-card">
          <h3>Fat</h3>
          <div class="progress-bar">
            <div class="progress-fill" id="fatProgress"></div>
          </div>
          <p><span id="fatConsumed">0</span> / <span id="fatGoal">0</span> g</p>
        </div>
      </div>
    </div>

    <!-- Charts -->
    <div class="charts-section">
      <div class="chart-container">
        <canvas id="caloriesChart"></canvas>
      </div>
      <div class="chart-container">
        <canvas id="macrosChart"></canvas>
      </div>
    </div>

    <!-- Food Log -->
    <div class="food-log-section">
      <h2>Food Log</h2>
      <div class="meal-tabs">
        <button class="meal-tab active" data-meal="breakfast">Breakfast</button>
        <button class="meal-tab" data-meal="lunch">Lunch</button>
        <button class="meal-tab" data-meal="dinner">Dinner</button>
        <button class="meal-tab" data-meal="snacks">Snacks</button>
      </div>
      <div id="foodLogContent"></div>
      <button id="addFoodBtn" class="btn btn-primary">Add Food</button>
    </div>

    <!-- Recommendations -->
    <div class="recommendations-section">
      <h2>Recommendations</h2>
      <div id="recommendationsList"></div>
    </div>
  </div>
</div>

<!-- Food Search Modal -->
<div id="foodSearchModal" class="modal" style="display: none;">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>Search Food</h2>
    <input type="text" id="foodSearchInput" placeholder="Search for food...">
    <div id="foodSearchResults"></div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/public/js/nutritionalDashboard.js"></script>
<script src="/public/js/foodSearch.js"></script>

