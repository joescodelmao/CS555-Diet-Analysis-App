                  <div class="food-icon">ğŸ½ï¸</div>
                  <div class="food-details">
                    <h3 class="food-name">{{this.food}}</h3>
                    {{#if this.ingredients}}
                      <div class="food-ingredients">
                        <span class="ingredients-label">Ingredients:</span>
                        <span class="ingredients-text">{{this.ingredients}}</span>
                      </div>
                    {{/if}}
                  </div>
                </div>
                
                {{#if this.nutrition}}
                  <div class="nutrition-info">
                    <div class="nutrition-icon">ğŸ“Š</div>
                    <div class="nutrition-details">
                      <p class="nutrition-text">{{this.nutrition}}</p>
                    </div>
                  </div>
                {{/if}}
              </div>
              
              <div class="food-entry-footer">
                <div class="entry-divider"></div>
              </div>
            </div>
          {{/each}}
        </div>
